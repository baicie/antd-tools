{
  "include": ["src", "index.ts"],
  "exclude": ["node_modules", "templates"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
